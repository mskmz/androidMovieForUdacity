<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layout_height="wrap_content">

        <View
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/tv_total_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/spacing_large"
            android:text="Trailers:"/>
        <ImageView
            android:id="@+id/iv_player"
            app:layout_constraintTop_toBottomOf="@id/tv_total_title"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/black_player"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="trailer1"
            app:layout_constraintTop_toTopOf="@id/iv_player"
            app:layout_constraintBottom_toBottomOf="@id/iv_player"
            app:layout_constraintLeft_toRightOf="@id/iv_player"/>
    </android.support.constraint.ConstraintLayout>

</layout>
